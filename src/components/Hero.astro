---
import * as cv from '@cv'
import { type Resume } from '@/types/resume'
import Section from '@/components/Section.astro'
import Mail from '@/components/icons/Mail.astro'
import Phone from '@/components/icons/Phone.astro'
import Github from '@/components/icons/Github.astro'
import Spotify from '@/components/icons/Spotify.astro'
import Linkedin from '@/components/icons/Linkedin.astro'
import WorldMap from '@/components/icons/WorldMap.astro'

const data: Resume = JSON.parse(JSON.stringify(cv))

const { name, label, email, summary, image, profiles, phone, location} = data.basics
const {city, region } = location

const ICONS: Record<string, any> = {
    Github,
    Spotify,
    Linkedin
}
---
<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <WorldMap />
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a 
                            href={`mailto:${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a
                            href={`tel:${phone}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map((profile, index) => {
                        const { network, url } = profile
                        const Icon = ICONS[network]
                        return (
                            <a
                                href={url}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>

                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>
<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }
    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
    }
    img {
        width: 150px;
        border-radius: 16px;
        object-fit: cover;
        aspect-ratio: 1 / 1;
    }
    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: .25rem;
        font-size: .85rem;
        letter-spacing: -0.05rem;
    }
    footer {
        display: flex;
        gap: 8px;
        margin-top: 8px;
        a {
            color: #666;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #eee;
            padding: 4px;
            height: 32px;
            width: 32px;
            border-radius: 20%;
            transition: color .2s;
            &:hover {
                color: #000;
                border: 1px solid #ccc;
                background: #f8f8f8;
            }
        }
    }
</style>